<!-- webapp\ext\EditDialog.fragment.xml -->
<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
  <Dialog title="{= ${ext>/mode} === 'Create' ? 'Create Sales Order' : 'Edit Sales Order' }" stretchOnPhone="true">
    <VBox class="sapUiSmallMargin">
      <Label text="Salesorder"/><Input value="{Salesorder}" editable="{= ${ext>/mode} === 'Create' }"/>

      <Label text="Createdbyuser"/><Input value="{Createdbyuser}"/>
      <Label text="Lastchangedbyuser"/><Input value="{Lastchangedbyuser}"/>

      <Label text="Creationdatetime"/>
      <DateTimePicker value="{path:'Creationdatetime'}" displayFormat="medium" valueFormat="yyyy-MM-dd'T'HH:mm:ss'Z'"/>

      <Label text="Lastchangeddatetime"/>
      <DateTimePicker value="{path:'Lastchangeddatetime'}" displayFormat="medium" valueFormat="yyyy-MM-dd'T'HH:mm:ss'Z'"/>

      <Label text="Iscreatedbybusinesspartner"/><CheckBox selected="{Iscreatedbybusinesspartner}"/>
      <Label text="Islastchangedbybusinesspartner"/><CheckBox selected="{Islastchangedbybusinesspartner}"/>

      <Label text="Customer"/><Input value="{Customer}"/>
      <Label text="Companyname"/><Input value="{Companyname}"/>
      <Label text="Customercontact"/><Input value="{Customercontact}"/>

      <Label text="Transactioncurrency"/><Input value="{Transactioncurrency}"/>
      <Label text="Grossamountintransaccurrency"/><Input value="{Grossamountintransaccurrency}" type="Number"/>
      <Label text="Netamountintransactioncurrency"/><Input value="{Netamountintransactioncurrency}" type="Number"/>
      <Label text="Taxamountintransactioncurrency"/><Input value="{Taxamountintransactioncurrency}" type="Number"/>

      <Label text="Salesorderlifecyclestatus"/><Input value="{Salesorderlifecyclestatus}"/>
      <Label text="Salesorderbillingstatus"/><Input value="{Salesorderbillingstatus}"/>
      <Label text="Salesorderdeliverystatus"/><Input value="{Salesorderdeliverystatus}"/>
      <Label text="Salesorderoverallstatus"/><Input value="{Salesorderoverallstatus}"/>

      <Label text="Opportunity"/><Input value="{Opportunity}"/>
      <Label text="Salesorderpaymentmethod"/><Input value="{Salesorderpaymentmethod}"/>
      <Label text="Salesorderpaymentterms"/><Input value="{Salesorderpaymentterms}"/>

      <Label text="Billtoparty"/><Input value="{Billtoparty}"/>
      <Label text="Billtopartyrole"/><Input value="{Billtopartyrole}"/>
      <Label text="Shiptoparty"/><Input value="{Shiptoparty}"/>
      <Label text="Shiptopartyrole"/><Input value="{Shiptopartyrole}"/>
    </VBox>

    <beginButton><Button text="OK" type="Emphasized" press=".onEditOk"/></beginButton>
    <endButton><Button text="Cancel" press=".onEditCancel"/></endButton>
  </Dialog>
</core:FragmentDefinition>
