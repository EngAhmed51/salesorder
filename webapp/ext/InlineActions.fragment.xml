<!-- webapp/ext/InlineActions.fragment.xml -->
<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:template="http://schemas.sap.com/sapui5/extension/sap.ui.core.template/1">

  <!-- Extra actions column for ResponsiveTable -->
  <Column width="5rem" hAlign="End">
    <header><Text text=""/></header>

    <!-- One cell per row -->
    <template:default>
      <HBox justifyContent="End">
        <Button
          icon="sap-icon://pushpin-on"
          type="Transparent"
          tooltip="Edit"
          press=".onRowEdit"/>
        <Button
          icon="sap-icon://delete"
          type="Transparent"
          tooltip="Delete"
          press=".onRowDelete"/>
      </HBox>
    </template:default>
  </Column>
</core:FragmentDefinition>
